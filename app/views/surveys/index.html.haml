- title 'Results'
- summarize_parameter = @parameter
%p
  - if !@current_object.nil? && @current_object.survey_group
    = @current_object.survey_group.group_name
    /= link_to parent_object.group_name, parent_object
.vertical-tabs
  %ol.tabs
    - for parameter in (Survey.parameter_columns + [:n])
      %li
        %a{ :class => (parameter.to_s == summarize_parameter) ? 'yah ' + parameter.to_s : parameter.to_s, :href => url_for(:p => parameter) }
          = parameter_to_drake_component parameter
  %div#page-body
    = render :partial => 'parameter_results'